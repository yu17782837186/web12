         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>co</servlet-name>
        <servlet-class>cn.com.ning.MyServletCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>co</servlet-name>
        <url-pattern>/co</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cg</servlet-name>
        <servlet-class>cn.com.ning.MyServletGetCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cg</servlet-name>
        <url-pattern>/cg</url-pattern>
    </servlet-mapping>
</web-app>